<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center_horizontal"
                android:text="用户设置"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/userupdate"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/news3"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/syts3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_03"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/san"/>
            <TextView
                android:layout_toRightOf="@id/syts3"
                android:layout_toLeftOf="@id/dianjiO3"
                android:id="@+id/notice3"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="修改密码"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:id="@+id/version"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/news4"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/syts4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/my_09"/>
            <ImageView
                android:id="@+id/dianjiO4"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/san"/>
            <TextView
                android:layout_toRightOf="@id/syts4"
                android:layout_toLeftOf="@id/dianjiO4"
                android:id="@+id/notice4"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="版本信息"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"/>
        </RelativeLayout>
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:id="@+id/loginout"
        android:gravity="center_vertical"
        android:background="#FF0000"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="退出"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"/>
    </RelativeLayout>


</LinearLayout>
